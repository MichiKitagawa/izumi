{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "./dist",
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@server/*": ["server/src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "../shared"]
}
